<Window x:Class="Sklad.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sklad"
        mc:Ignorable="d"
        Closing="Login_Closing"
        Closed="Login_Closed"
        Title="Login" Height="250" Width="350">
    <Grid>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Height="23" Margin="191,49,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Username:" HorizontalAlignment="Left" Margin="32,49,0,0" VerticalAlignment="Top"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="32,125,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="137,180,0,0" VerticalAlignment="Top" Width="75" Click="btnLogin_Click"/>
        <PasswordBox x:Name="txtPass" HorizontalAlignment="Left" Margin="191,125,0,0" VerticalAlignment="Top" Width="120" Height="26"/>

    </Grid>
</Window>
